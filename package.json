{
  "name": "iobroker.weather-warnings",
  "version": "0.6.7",
  "description": "weather-warnings",
  "author": {
    "name": "ticaki",
    "email": "github@renopoint.de"
  },
  "homepage": "https://github.com/ticaki/ioBroker.weather-warnings",
  "license": "MIT",
  "keywords": [
    "weather",
    "dwd",
    "uwz",
    "zamg",
    "nina",
